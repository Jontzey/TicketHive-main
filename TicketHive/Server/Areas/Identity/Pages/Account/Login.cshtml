@page
@model TicketHive.Server.Areas.Identity.Pages.Account.LoginModel
@{
}

<div class="card TicketHiveTheme">
    <div class="card-header">
        Login:
    </div>
    <div class="card-body justify-content-center">
        <form method="post">
            <input type="text" asp-for="Username" placeholder="Username" />
            <hr />
            <input type="password" asp-for="Password" placeholder="Password" />
            <hr />
            <input class="btn blue-border blue-hover" type="submit" value="Login" />
        </form>

        @if (!ModelState.IsValid)
        {
            <span class="text-danger" asp-validation-for="Username"></span>
            <br />
            <span class="text-danger" asp-validation-for="Password"></span>
        }
        else
        {
            <span class="text-danger">@Model.InvalidCredentials</span>
        }
    </div>
</div>

<style>
    .TicketHiveTheme {
        background-image: linear-gradient(245deg, rgb(48, 80, 118) 40%, rgb( 251, 232, 156) 70%);
    }

    .yellow-hover:hover {
        box-shadow: 0 0 5px rgb( 251, 232, 156), 0 0 10px rgb( 251, 232, 156), 0 0 15px rgb( 251, 232, 156), 0 0 20px rgb( 251, 232, 156);
        transform: translate(-1px);
        background: rgb( 251, 232, 156);
        font-weight: bold;
    }

    .yellow-border {
        border-width: 2px;
        border-style: solid;
        border-color: rgb( 251, 232, 156);
    }

    .blue-border {
        border-width: 2px;
        border-style: solid;
        border-color: rgb(48, 80, 118);
    }

    .blue-hover:hover {
        box-shadow: 0 0 5px rgb(48, 80, 118), 0 0 10px rgb(48, 80, 118), 0 0 15px rgb(48, 80, 118), 0 0 20px rgb(48, 80, 118);
        transform: translate(-1);
        background: rgb(48, 80, 118);
        font-weight: bold;
    }
</style>